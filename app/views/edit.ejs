<!doctype html>
<html>

<head>
  <title>Web Bán Vé Xem Phim Chất Lượng</title>
  <meta charset="utf-8" />
  <% include ./layout/header %>
</head>

<body>
  <div id="header">
    <nav class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <a href="/" class="navbar-brand"><img src="/static/images/images.png" style="width:120px; height: 40px;">
          </a>

        </div>
        <div class="navbar-collapse collpase" id="main-menu">
          <ul class="nav navbar-nav">
            <li>
              <a href="/" class="hvr-underline-form-center">Trang Chủ</a>
            </li>
            <li>
              <a href="#" data-toggle="dropdown">Danh Sách Phim<span class="caret"></span></a>
            </li>
            <li>
              <a href="/cinox/cinox">Rạp Chiếu Phim</a>
            </li>
            <li>
              <a href="#">Liên Hệ</a>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li>
              <div class="search-container">
                <form action="/search-movies" method="POST">
                  <input type="text" placeholder="Search.." name="search">
                  <button type="submit"><i class="fa fa-search"></i></button>
                </form>
              </div>
            </li>
            <% if(data) { %>


            <li>
              <a href="/edit" class="navbar-btn navbar-right btn_dn"> <%= data %> </a>
            </li>

            <% } else { %>

            <li>
              <a href="/login" class="navbar-btn navbar-right btn_dn"> Đăng Nhập </a>
            </li>

            <% } %>

            <% if(data) { %>
            <li>
              <a href="/exit" class="navbar-btn navbar-right btn_dn"> Đăng Xuất </a>
            </li>
            <% } else { %>
            <li>
              <a href="/user/signup" class="navbar-btn navbar-right btn_dn"> Đăng ký </a>
            </li>
            <% } %>

          </ul>
        </div>
      </div>
    </nav>
  </div>

  <div class="page-title">
    <h1>Thông Tin Tài Khoản</h1>
  </div>

  <div class="container" style="padding-top: 60px;background-color: white">
    <h1 class="page-header">Edit Profile</h1>
    <div class="row">
      <!-- left column -->
      <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="text-center">

          <img src="https://cdn.pixabay.com/photo/2016/03/31/17/33/account-1293744_960_720.png"
            class="avatar img-circle img-thumbnail" alt="avatar">
          <h6>Upload a different photo...</h6>
          <input type="file" class="text-center center-block well well-sm">
        </div>

      </div>
      <!-- edit form column -->
      <div class="tab">
        <button class="tablinks" onclick="openCity(event, 'Profile')">Profile</button>
        <button class="tablinks" onclick="openCity(event, 'Ticket')">Ticket</button>
      </div>

      <div id="Profile" class="tabcontent">
        <div class="col-md-8 col-sm-6 col-xs-12 personal-info">
          <div class="alert alert-info alert-dismissable">
            <a class="panel-close close" data-dismiss="alert">×</a>
            <i class="fa fa-coffee"></i>
            <strong></strong>Bạn có thể chỉnh sửa thông tin cá nhân của mình tại đây
          </div>
          <h3>Personal info</h3>


          <form action="/edit" class="form-horizontal" method="POST" role="form">

            <div class="form-group">
              <label class="col-lg-3 control-label">Name</label>
              <div class="col-lg-8">
                <input class="form-control" name="name" value="<%= dulieu.name %>" type="text">
              </div>
            </div>

            <div class="form-group">
              <label class="col-lg-3 control-label">Email:</label>
              <div class="col-lg-8">
                <input class="form-control" name="email" value="<%= dulieu.email %>" type="text">
              </div>
            </div>

            <div class="form-group">
              <label class="col-lg-3 control-label">Phone</label>
              <div class="col-lg-8">
                <input class="form-control" name="sdt" value="<%= dulieu.sdt %>" type="text">
              </div>
            </div>

            <div class="form-group">
              <label class="col-md-3 control-label">Password:</label>
              <div class="col-md-8">
                <input class="form-control" name="password" type="text">
              </div>
            </div>



            <div class="form-group">
              <label class="col-md-3 control-label"></label>
              <div class="col-md-8">

                <button class="btn btn-danger pull-right">Cập Nhật Thông Tin</button>
              </div>
            </div>

          </form>


        </div>
      </div>

      <div id="Ticket" class="tabcontent">
        <table class="table table-striped">
          <thead class="thead-light">
            <tr>
              <th scope="col">ID Vé</th>
              <th scope="col">ID Đặt chỗ</th>
              <th scope="col">Phim</th>
              <th scope="col">Rạp</th>
              <th scope="col">Cụm rạp</th>
              <th scope="col">Thời gian</th>
              <th scope="col">Giá vé</th>
              <th scope="col">Mã Ghế</th>
              <th scope="col">Dãy</th>
              <th scope="col">Cột</th>
            </tr>
          </thead>
          <tbody>
            <% ve.rows.forEach(function(v){%>
            <tr>
              <td ><%= v.id%></td>
              <td><%= v.id_dc%></td>
              <td><%= v.phim%></td>
              <td><%= v.rap%></td>
              <td><%= v.cumrap%></td>
              <td><%= v.tg_batdau%></td>
              <td><%= v.gia_tien%></td>
              <td><%= v.ma_ghe%></td>
              <td><%= v.dc_ngang%></td>
              <td><%= v.dc_doc%></td>
            </tr>
            <%})%>
          </tbody>
        </table>
      </div>

    </div>
  </div>
  <% include ./layout/header %>
</body>
<script>
  function openCity(evt, cityName) {
    var i, tabcontent, tablinks;
    tabcontent = document.getElementsByClassName("tabcontent");
    for (i = 0; i < tabcontent.length; i++) {
      tabcontent[i].style.display = "none";
    }
    tablinks = document.getElementsByClassName("tablinks");
    for (i = 0; i < tablinks.length; i++) {
      tablinks[i].className = tablinks[i].className.replace(" active", "");
    }
    document.getElementById(cityName).style.display = "block";
    evt.currentTarget.className += " active";
  }
</script>

</html>